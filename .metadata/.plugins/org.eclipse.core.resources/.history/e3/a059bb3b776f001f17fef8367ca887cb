Server:
  port: 8085
  
Spring:
  application:
    name: API-GATEWAY
   
  cloud:
    gateway:
     mvc:
        routes:
        - id: USER-SERVICE
          uri: lb:/USER-SERVICE
          predicates:
           - path=/usercontroller/**
           
        - id: HOTEL-SERVICE
          uri: lb:/HOTEL-SERVICE
          predicates:
           - path=/hotelcontroller/** 
            
        - id: RATING-SERVICE
          uri: lb:/RATING-SERVICE
          predicates:
           - path=/ratingcontroller/** 
eureka:
  instance:
    prefer-ip-address: true
   
  client:
    fetch-registry: true
    register-with-eureka: true
    service-url:
      defaultZone: http://localhost:8761/eureka
       